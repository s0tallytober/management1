<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
        android:id="@+id/adminDashboardCardView"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/_5dp"
        app:cardElevation="@dimen/_5dp"
        app:cardMaxElevation="@dimen/_5dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true"
        android:layout_marginEnd="@dimen/_5dp"
        android:layout_height="wrap_content">

    <LinearLayout
            android:layout_margin="@dimen/_10dp"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <RelativeLayout
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:textColor="@color/black"
                    android:id="@+id/eventUser"
                    android:textSize="18sp"
                    android:text="Santosh"
                    style="@style/fontLight"
                    android:layout_alignParentLeft="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:layout_centerVertical="true"
                    android:textSize="12sp"
                    android:layout_toRightOf="@+id/eventUser"
                    android:text="@string/posted_a_event"
                    style="@style/fontLight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:id="@+id/eventTime"
                    android:textSize="8sp"
                    android:layout_alignParentRight="true"
                    android:gravity="right"
                    android:layout_gravity="right"
                    android:text="Santosh Riht"
                    style="@style/fontLight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </RelativeLayout>

        <ImageView
                android:scaleType="fitXY"
                android:layout_marginTop="@dimen/_10dp"
                android:id="@+id/eventImage"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_150dp"/>

        <TextView
                android:maxLines="5"
                android:inputType="textMultiLine"
                android:layout_marginTop="@dimen/_10dp"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:fontFamily="@font/poppins_regular"
                android:id="@+id/eventMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

    </LinearLayout>

</android.support.v7.widget.CardView>

